<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.testol.dao.UserMapper">
    <select id="loginByEmail" resultMap="user">
       select u.* from users u,user_password u_p
       where u.email=#{email} and u_p.password=#{password} and u_p.u_id=#{u_id}
    </select>

    <select id="loginByPhone" resultMap="user">
       select u.* from users u,user_password u_p
       where u.phone=#{phone} and u_p.password=#{password} and u_p.u_id=#{u_id}
    </select>

    <select id="getUserById" resultMap="user">
       select * from users where u_id=#{u_id}
    </select>

    <select id="getUserByEmail" resultMap="user">
       select * from users where email=#{email}
    </select>

    <select id="getUserByPhone" resultMap="user">
       select * from users where phone=#{phone}
    </select>


    <select id="queryUserByC_id" resultMap="ClassesUser">
        select *
        from users u , user_classes u_c
        where u.u_id=u_c.u_id and u_c.c_id=#{c_id}
    </select>

    <insert id="addUserInfo" parameterType="User" useGeneratedKeys="true" keyProperty="u_id">
        insert into users(u_id,u_name,create_date,phone,email,work)
            value(#{u_id},#{name},#{create_date},#{phone},#{email},'')
    </insert>

    <resultMap id="user" type="user">
        <id property="u_id" column="u_id"/>
        <result property="name" column="u_name"/>
        <result property="sex" column="sex"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="status" column="status"/>
        <result property="work" column="work"/>
        <result property="photo" column="photo"/>
        <result property="create_date" column="create_date"/>
    </resultMap>

    <resultMap id="ClassesUser" type="user_classes">
        <result property="u_id" column="u_id"/>
        <result property="c_id" column="c_id"/>
        <result property="status" column="status"/>
        <result property="enter_date" column="enter_date"/>
        <association property="user" javaType="User">
            <id property="u_id" column="u_id"/>
            <result property="name" column="u_name"/>
            <result property="sex" column="sex"/>
            <result property="phone" column="phone"/>
            <result property="email" column="email"/>
            <result property="work" column="work"/>
        </association>
        <association property="classes" javaType="Classes">
            <id property="c_id" column="c_id"/>
            <result property="name" column="c_name"/>
            <result property="create_date" column="create_date"/>
            <result property="introduction" column="introduction"/>
            <result property="people_num" column="people_num"/>
            <result property="joinWay" column="joinWay"/>
            <result property="creator_id" column="creator_id"/>
        </association>
    </resultMap>

</mapper>